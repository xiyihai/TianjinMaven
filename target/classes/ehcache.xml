<?xml version="1.0" encoding="UTF-8"?>
<ehcache>
    <diskStore path="java.io.tmpdir"/>
    
    <!--我们可以给每个实体类指定一个对应的缓存，如果没有匹配到该类，则使用这个默认的缓存配置-->
    <!--可以给每个实体类指定一个配置文件，通过name属性指定，要使用类的全名-->
    
    <!--timeToIdleSeconds 对象空闲时间 -->
    <!--timeToLiveSeconds 对象生存时间 -->
    
    <defaultCache
        maxElementsInMemory="30000"
        eternal="false"
        timeToIdleSeconds="120"
        timeToLiveSeconds="120"
        overflowToDisk="true"
        />
      
      
     <!-- hibernate使用的缓存配置 -->
     <cache name="domains.County"
       maxElementsInMemory="30"
       eternal="false"
       timeToIdleSeconds="300"   
       timeToLiveSeconds="600"	 
       overflowToDisk="true"
       />
       
      <cache name="domains.Cell"
       maxElementsInMemory="1000"
       eternal="false"
       timeToIdleSeconds="20"   
       timeToLiveSeconds="60"	 
       overflowToDisk="true"
       />
       
     <cache name="domains.Region"
       maxElementsInMemory="50"
       eternal="false"
       timeToIdleSeconds="300"   
       timeToLiveSeconds="600"	 
       overflowToDisk="true"
       />
       
       <cache name="domains.Voronoi"
       maxElementsInMemory="20000"
       eternal="false"
       timeToIdleSeconds="600"   
       timeToLiveSeconds="600"	 
       overflowToDisk="true"
       />
         
           
      <cache name="domains.Timestamp"
       maxElementsInMemory="10"
       eternal="false"
       timeToIdleSeconds="60"   
       timeToLiveSeconds="60"	 
       overflowToDisk="true"
       />
       
       
       <!-- spring使用的缓存配置 -->
      <cache name="Voronoi"
       maxElementsInMemory="20000"
       eternal="false"
       timeToIdleSeconds="600"   
       timeToLiveSeconds="600"	 
       overflowToDisk="true"
       />
       
      <cache name="Timestamp"
       maxElementsInMemory="20000"
       eternal="false"
       timeToIdleSeconds="600"   
       timeToLiveSeconds="600"	 
       overflowToDisk="true"
       />
       
</ehcache>
